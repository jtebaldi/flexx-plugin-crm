<header class="topbar">
  <div class="topbar-left">
    <span class="topbar-btn sidebar-toggler"><i>&#9776;</i></span>
    <a href="#" class="topbar-btn d-none d-md-block" data-provide="fullscreen">
      <i class="ti-fullscreen fullscreen-default"></i>
      <i class="fa fa-compress fullscreen-active"></i>
    </a>
    <div class="topbar-divider"></div>
    <span class="topbar-mobile logo">
      <img style="width: 100%; max-width: 120px; opacity: .8;" src="https://d15fieipd5pxyz.cloudfront.net/flexxco/flexx_final_dark_copy.png" alt="logo">
    </span>
    <h4 class="topbar-title text-uppercase d-none d-sm-block"><%= current_site.the_title %></h4>
  </div>

  <div class="topbar-right">
    <a class="topbar-btn" href="#qv-global" data-toggle="quickview"><i class="ti-align-right"></i></a>
    <div class="topbar-divider"></div>
    <ul class="topbar-btns">
      <li class="dropdown">
        <span class="topbar-btn" data-toggle="dropdown"><span class="avatar"><%= current_user.initials %></span></span>
        <div class="dropdown-menu dropdown-menu-right">
          <a id="link-to-profile" class="dropdown-item" href="<%= index_admin_settings_path(:profile) %>"><i class="ti-user"></i> Profile</a>
          <div class="dropdown-divider"></div>
          <a class="dropdown-item" href="<%= cama_admin_logout_path() %>"><i class="ti-power-off"></i> Logout</a>
        </div>
      </li>

      <li class="dropdown d-none d-md-block">
        <span class="topbar-btn has-new" data-toggle="dropdown"><i class="ti-bell"></i></span>
        <div class="dropdown-menu dropdown-menu-right">

          <div class="media-list media-list-divided media-list-hover media-list-xs scrollable" style="height: 290px">
            <a class="media media-new" href="#">
              <span class="avatar bg-white"><i class="fs-25 text-info fa fa-wpforms" style="line-height: 38px;"></i></span>
              <div class="media-body">
                <p>Contact form completed by <strong>Joe Tebaldi</strong></p>
                <time datetime="2018-07-14 20:00">Just now</time>
              </div>
            </a>

            <a class="media" href="#">
              <span class="avatar bg-white"><i class="fs-25 text-info fa fa-comments" style="line-height: 38px;"></i></span>
              <div class="media-body">
                <p>New SMS received from <strong>Paulo Castro</strong></p>
                <time datetime="2018-07-14 20:00">53 min ago</time>
              </div>
            </a>

          </div>

          <div class="dropdown-footer">
            <div class="left">
              <a href="#">Clear all</a>
            </div>
          </div>

        </div>
      </li>

      <!-- START Search
      <li>
        <button data-toggle="lookup" data-target="#lookup-full" class="topbar-btn" style="color:#4d5259;"><i class="ti-search"></i></button>
      </li>
      END Search-->

    </ul>

  </div>
</header>
