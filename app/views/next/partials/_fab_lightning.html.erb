<div class="fab fab-fixed">
  <button class="btn btn-float btn-danger" data-toggle="modal" data-target="#modal-fab">
    <i class="fab-icon-default ti-rocket"></i>
    <i class="fab-icon-active ti-close"></i>
  </button>
</div>

<!-- Modal -->
<div class="modal modal-fill fade" data-backdrop="false" id="modal-fab" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Quick links</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div class="media-grid media-grid-bordered media-grid-hover row">
          <div class="col-6 col-md-3">
            <div class="media flex-column align-items-center">
              <span class="fa fa-apple fs-90"></span>
              <code class="w-100 text-center">Apple</code>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="media flex-column align-items-center">
              <span class="fa fa-google fs-90"></span>
              <code class="w-100 text-center">Google</code>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="media flex-column align-items-center">
              <span class="fa fa-windows fs-90"></span>
              <code class="w-100 text-center">Windows</code>
            </div>
          </div>

          <div class="col-6 col-md-3">
            <div class="media flex-column align-items-center">
              <span class="fa fa-facebook fs-90"></span>
              <code class="w-100 text-center">Facebook</code>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-bold btn-pure btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>