<% if flash[:alert] %>
  $('#password-flash-messages').html('<%= escape_javascript(render 'layouts/flash_messages') %>');
<% else %>
  $('#modal_update_pw').modal('hide');
  $('#password-flash-messages').html('');
  $('#password-form').find('input[type="password"]').val('');
  $('#flash-messages').html('<%= escape_javascript(render 'layouts/flash_messages') %>');
<% end %>