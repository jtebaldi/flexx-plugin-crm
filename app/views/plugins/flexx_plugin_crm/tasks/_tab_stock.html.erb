<div class="tab-pane fade" id="tab-stock">
  <div class="row">
    <div class="col-lg-6 col-md-12">
      <h4 class="text-center">Have a task you create often? Save it as a stock task!</h4>
      <p class="lead text-fade text-center">This will allow you to quickly pre-fill details when adding a new task to a contact.</p>

      <div class="card form-type-combine">        

        <%= form_tag create_stock_admin_tasks_path, method: :post, remote: true, authenticity_token: true, id: 'stock-tasks-form', class: 'form-type-combine', style: 'width: 100%' do %>
          <input type="hidden" name="stock_task[stock_type]" value="task">
          <div class="card-body">

            <h6 class="text-light fw-300">Create a stock task</h6>
            <div class="form-groups-attached">
              <div class="row">
                <div class="form-group col-12">
                  <label for="select">Type</label>
                  <select class="form-control" name="stock_task[metadata][task_type]">
                    <option value="phone_call">Phone call</option>
                    <option value="email">Email</option>
                    <option value="message">Text</option>
                    <option value="meeting">Meeting</option>
                    <option value="general">General</option>
                  </select>
                </div>
              </div>

              <div class="form-group require">
                <label>Title</label>
                <input class="form-control" type="text" name="stock_task[name]" value="" required>
                <div class="invalid-feedback"></div>
              </div>

              <div class="form-group">
                <label for="textarea">Description</label>
                <small>Optional</small>
                <textarea class="form-control" rows="3" name="stock_task[description]"></textarea>
              </div>

            </div>

            <button class="btn btn-success">Create</button>
          </div>
        <% end %>
      </div>
    </div>
    <div class="col-lg-6 col-md-12">
      <div class="card">
        <header class="card-header">
          <h4 class="card-title"><strong>Stock Tasks</strong> List <br><small>Click on a task to view/edit details</small></h4>
          <div class="card-header-actions">
          </div>
        </header>

        <div id="stock-tasks-list" class="pt-20 px-20 scrollable" style="max-height: 600px;">
          <%= render 'stock_tasks_list' %>
        </div>
      </div>
    </div>    
  </div>
</div>  