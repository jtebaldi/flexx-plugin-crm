clearNewContactTaskForm();

$('#contact-open-tasks-panel').hide();

$('#contact-open-tasks-panel').html('<%= escape_javascript(render partial: 'plugins/flexx_plugin_crm/contacts/open_tasks', locals: { refresh_panel: 'view-contact-tasks-panels' })  %>');

$('#contact-open-tasks-panel').fadeIn();

quickview.close($('#qv-add-task'));

<% if params[:task].try(:[], :touchpoint).present? %>
  $('.touchpoint').removeClass('disabled');
  $('#modal-new-touchpoint').modal('hide');
  quickview.toggle('#qv_view_task', '/admin/next/task_card/<%= @task.id %>/view-contact-tasks-panels');
<% end %>
