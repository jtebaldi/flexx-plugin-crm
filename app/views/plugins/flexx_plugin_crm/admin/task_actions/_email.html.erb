<style>
  .ck-editor__editable {
    min-height: 350px;
  }
</style>

<form class="form-type-combine card">
  <div class="card-body">

    <div class="form-groups-attached mt-30">
      <%= render partial: 'plugins/flexx_plugin_crm/common/email_stocks_dropdown' %>
    </div>

    <br>
    <div class="form-groups-attached">

      <div class="form-group">
        <label>To</label>
        <input class="form-control" type="text" id="recipients" value="<%= contact.print_name %>" readonly>
      </div>

      <div class="form-group">
        <label>Subject</label>
        <input class="form-control" type="text" name="subject">
      </div>

      <div class="form-group">
        <label>From</label>
        <%= render partial: 'plugins/flexx_plugin_crm/common/email_senders_dropdown', locals: { input_field_name: 'sender' } %>
      </div>

      <div class="form-group">
        <label>Message</label>
        <textarea name="message" class="form-control editor" rows="10"></textarea>
      </div>

    </div>
  </div>
</form>
