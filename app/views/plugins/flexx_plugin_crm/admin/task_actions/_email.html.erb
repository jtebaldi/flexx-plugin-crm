<style>
  .ck-editor__editable {
    min-height: 350px;
  }
</style>

<%= form_tag create_email_admin_messages_path(format: :js), method: :post, remote: true, authenticity_token: true, id: 'task-send-message-form', class: 'quickview-block form-type-combine pt-0' do %>
  <input type="hidden" name="email[task_id]" value="<%= task.id %>">
  <div class="card-body">

    <div class="mt-30">
      <%= render partial: 'plugins/flexx_plugin_crm/common/email_stocks_dropdown' %>
    </div>

    <br>
    <div class="form-groups-attached mb-0">

      <div class="form-group">
        <label>To</label>
        <input class="form-control" type="text" id="recipients" value="<%= task.contact && task.contact.print_name %>" readonly>
        <input type="hidden" id="recipient_id" name="email[recipients_list]" value="<%= task.contact && task.contact.id %>" readonly>
      </div>

      <div class="form-group">
        <label>Subject</label>
        <input class="form-control" type="text" name="email[subject]">
      </div>

      <div class="form-group">
        <label>From</label>
        <%= render partial: 'plugins/flexx_plugin_crm/common/email_senders_dropdown', locals: { input_field_name: 'email[from]' } %>
      </div>

      <!-- Add "border-success" class when message has been saved -->
      <div class="form-group border-success">
        <label>Message</label>
        <textarea name="email[body]" class="form-control editor" rows="10"></textarea>
      </div>

    </div>
    <a href="#" class="btn btn-success btn-pure pr-1 fs-16" data-provide="tooltip" title="Save Message"><i class="fa fa-check"></i></a><span class="form-text text-success mt-2" style="display:inline-block;">Message autosaved at 2:34pm</small>
  </div>
<% end %>
