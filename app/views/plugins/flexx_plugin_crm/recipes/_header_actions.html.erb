<div class="buttons">
  <a class="btn btn-warning btn-float btn-sm" href="#" title="Edit title or description" data-provide="tooltip" data-placement="top"><i class="ti-pencil"></i></a>
  <a class="btn btn-<%= @task_recipe.shared ? 'success' : 'secondary' %> btn-float btn-sm" href="<%= admin_recipe_share_path(@task_recipe.id) %>" data-remote="true">
    <i class="ti-sharethis"></i>
  </a>
  <a class="btn btn-<%= @task_recipe.paused ? 'success' : 'secondary' %> btn-float" href="<%= admin_recipe_toggle_path(@task_recipe.id) %>" data-remote="true">
    <i class="ti-control-<%= @task_recipe.paused ? 'play' : 'pause' %>"></i>
  </a>
</div>
