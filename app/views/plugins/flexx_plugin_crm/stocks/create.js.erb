<% case @stock.stock_type %>
<% when 'snippet' %>
  $('#snippet-stock-form')[0].reset();
  $('#snippet-stock-save').toggleClass('disabled');
  $('#snippet-stock-cancel').toggleClass('disabled');
  $('#snippet-stock-spinner').toggleClass('hidden');
<% when 'rich_text' %>
  $('#rich-text-stock-form')[0].reset();
  $('#rich-text-stock-save').toggleClass('disabled');
  $('#rich-text-stock-cancel').toggleClass('disabled');
  $('#rich-text-stock-spinner').toggleClass('hidden');
<% end %>

quickview.close($('#qv-stock'));

<% if params[:refresh_panel] == 'campaigns' %>
  $('#stock-email-select').html('<%= escape_javascript(render partial: 'plugins/flexx_plugin_crm/campaigns/stock_email_select') %>');

  $('#new-campaign-step-form').validator('update');
<% else %>
  $('#stock-list-panel').html('<%= escape_javascript(render partial: 'card_list', locals: { stocks: @stocks }) %>');

  window.shuffleInstance = new Shuffle($(document).find('[data-shuffle="list"]'));
<% end %>
