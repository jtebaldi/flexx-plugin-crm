<header class="flexbox align-items-center p-12 pr-20 bg-lighter bb-1 border-light">
  <div class="media align-items-center p-0">
    <a href="#"><span class="avatar"><%= contact.initials %></span></a>
    <div class="media-body">
      <h6><a href="#"><%= contact.print_name %></a></h6>
    </div>
  </div>
</header>

<div class="scrollable flex-grow" id="conversations-thread-panel" data-provide="emoji" style="height: 500px;">
  <%= render partial: 'plugins/flexx_plugin_crm/contacts/conversations', locals: { messages: contact.messages.order(created_at: :asc) } %>
</div>

<footer class="publisher">
  <span class="avatar"><%= current_user.initials %></span>
  <%= form_tag create_text_message_admin_messages_path(format: :js), method: :post, remote: true, authenticity_token: true, id: 'conversations-send-message-form', class: 'form-type-combine', style: 'width: 100%' do %>
    <input type="hidden" class="form-control" name="contact_id" value="<%= contact.id %>">
    <input type="hidden" class="form-control" name="phonenumber" value="<%= contact.phonenumbers.mobile.first.number %>">
    <input type="hidden" class="form-control" name="refresh_panel" value="conversations-thread-panel">
    <input name="message" style="width: 100%" id="conversations-text-message" class="publisher-input" rows="1" placeholder="Write something">
  <% end %>
  <div class="gap-items">
    <a class="publisher-btn" id="conversations-text-button" href="#" onclick="$('#conversations-send-message-form').submit()"><i class="fa fa-paper-plane"></i></a>
  </div>
  <div class="gap-items">
    <div id="conversations-text-spinner" style="margin-left: 10px" class="spinner-circle-shadow invisible"></div>
  </div>
</footer>
