<% content_for :js do %>
  <%= javascript_include_tag 'plugins/flexx_plugin_crm/common' %>
  <%= javascript_include_tag 'plugins/flexx_plugin_crm/contacts' %>
<% end %>

<style>
input[type=radio].hide-control { display: none; }
</style>

<div class="main-content">
  <div class="row">

    <div class="col-lg-4">
      <div class="card">
        <div class="card mb-0">
          <header class="card-header card-<%= @contact.sales_stage.downcase %> text-center">
            <h4 id="sales-stage-label" class="card-title text-white text-uppercase fw-600" style="margin: 0 auto;"><i><%= @contact.sales_stage.humanize %></i></h4>
          </header>
          <div class="media card-body card-inverse">
            <div class="media-left pr-12">
              <span class="avatar avatar-xl avatar-bordered status-success"><%= @contact.initials %></span>
            </div>

            <div class="media-body">
              <div class="mb-2">
                <span class="fs-20 pr-16"><%= @contact.print_name %></span>
              </div>
              <small class="fs-16 fw-300 ls-1"><i>Independent</i></small>
            </div>

          </div>
        </div>
        <div class="accordion accordion-connected" id="accordion-contact">
          <div class="card">
            <h5 class="card-title">
              <a data-toggle="collapse" data-parent="#accordion-contact" href="#collapse-contact">Contact <%= @contact.first_name %></a>
            </h5>

            <div id="collapse-contact" class="collapse">
              <% if @contact.email.present? %>
                <h6 class="card-title lead text-info text-uppercase text-center p-10"><i class="fa fa-envelope"></i><strong> Email</strong></h5>
                <div class="media-list media-list-hover media-list-divided">
                  <a class="media media-single" href="#">
                    <span class="title"><strong><%= @contact.email %></strong></span>
                    <i class="fa fa-paper-plane text-info"></i>
                  </a>
                </div>
              <% end %>
              <% if @contact.phonenumbers.present? %>
                <h6 class="card-title lead text-info text-uppercase text-center p-10"><i class="fa fa-phone"></i><strong> Call</strong></h5>
                <div class="media-list media-list-hover media-list-divided">
                  <a class="media media-single" href="#">
                    <span class="title"><strong><%= @contact.phonenumbers.first.number %></strong></span>
                    <i class="fa fa-paper-plane text-info"></i>
                  </a>
                </div>
              <% end %>
              <% if @contact.phonenumbers.present? && @contact.phonenumbers.first.phone_type == 'mobile' %>
                <h6 class="card-title lead text-info text-uppercase text-center p-10"><i class="fa fa-comment"></i><strong> Text</strong></h5>
                <div class="media-list media-list-hover media-list-divided">
                  <a class="media media-single" href="#" data-toggle="modal" data-target="#modal-send-text">
                    <span class="title"><strong><%= @contact.phonenumbers.first.number %></strong></span>
                    <i class="fa fa-paper-plane text-info"></i>
                  </a>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="card">
        <ul class="nav nav-lg nav-pills flex-column">
          <li class="nav-item">
            <a class="nav-link active" href="#tab_tasks" data-toggle="tab">Tasks</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#tab_contact_details" data-toggle="tab">User Details</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#tab_conversations" data-toggle="tab">Conversations</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="#tab_recipes_campaigns" data-toggle="tab">Campaigns & Recipes</a>
          </li>
        </ul>
      </div>

      <div class="text-center mb-20">
        <a class="btn btn-block btn-multiline btn-primary" href="#qv-add-task" data-toggle="quickview"><i class="ti-layout-list-thumb fs-20"></i><br>Add task</a>
      </div>
    </div>

    <div class="col-lg-8 tab-content">
      <div class="tab-pane fade active show" id="tab_tasks">
        <p class="lead text-center text-fade">Open tasks</p>
        <div id="contact-open-tasks-panel">
          <%= render partial: 'open_tasks', locals: { refresh_panel: 'view-contact-tasks-panels' }%>
        </div>
        <br>
        <div class="divider text-uppercase fw-500">Timeline</div>

        <div class="card">
          <header class="card-header">
            <h4 class="card-title"><strong>History</strong></h4>
            <div class="card-header-actions">
              <button class="btn btn-sm btn-primary">Filter</button>
            </div>
          </header>

          <ol id="contact-timeline-panel" class="timeline timeline-activity timeline-sm timeline-content-right w-100 py-20 pr-20">
            <%= render partial: 'timeline', locals: { refresh_panel: 'view-contact-tasks-panels' } %>
          </ol>

        </div>
      </div>

      <%= form_tag admin_contact_path(@contact.id), method: :patch, id: 'tab_contact_details', class: 'card form-type-material tab-pane fade' do %>
        <h4 class="card-title fw-400">Contact Details</h4>

        <div class="card-body">
          <div class="flexbox gap-items-4">
            <div class="flex-grow">
              <div class="row">
                <div class="col-md-6">
                  <div class="form-group">
                    <input class="form-control" type="text" name="contact[first_name]" value="<%= @contact.first_name %>">
                    <label>First name</label>
                  </div>
                </div>

                <div class="col-md-6">
                  <div class="form-group">
                    <input class="form-control" type="text" name="contact[last_name]" value="<%= @contact.last_name %>">
                    <label>Last name</label>
                  </div>
                </div>
              </div>

            </div>
          </div>

          <hr>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group ">
                <div class="input-group">
                  <div class="input-group-input">
                    <%= @contact.sales_stage.capitalize %>
                    <label>Status</label>
                  </div>
                  <span class="input-group-append">
                    <button class="btn btn-sm btn-info btn-outline" type="button" data-toggle="modal" data-target="#update_status_modal">Update</button>
                  </span>
                </div>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <div class="input-group">
                  <label>Lead source</label>
                  <select class="form-control" data-provide="selectpicker" title="Choose Source" name="contact[source]">
                    <option <%= 'selected' if @contact.source == 'email' %> value="email">Email</option>
                    <option <%= 'selected' if @contact.source == 'other' %> value="other">Other</option>
                    <option <%= 'selected' if @contact.source == 'partner' %> value="partner">Partner</option>
                    <option <%= 'selected' if @contact.source == 'pr_advertising' %> value="pr_advertising">PR / Advertising</option>
                    <option <%= 'selected' if @contact.source == 'referral' %> value="referral">Referral</option>
                    <option <%= 'selected' if @contact.source == 'social_media' %> value="social_media">Social Media</option>
                    <option <%= 'selected' if @contact.source == 'web_search' %> value="web_search">Web Search</option>
                    <option <%= 'selected' if @contact.source == 'website_form' %> value="website_form">Website Form</option>
                    <option <%= 'selected' if @contact.source == 'word_of_mouth' %> value="word_of_mouth">Word of mouth</option>
                  </select>
                </div>
              </div>
            </div>
          </div>

          <hr>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input class="form-control" type="text" name="contact[email]" value="<%= @contact.email %>">
                <label>Email</label>
              </div>
            </div>
            <div class="col-md-6">
              <div class="form-group do-float">
                <input type="text" class="form-control" name="contact[birthday]" value="<%= @contact.birthday.strftime("%m/%d/%Y") if @contact.birthday? %>" aria-describedby="basic-addon2"  data-format="{{99}}/{{99}}/{{9999}}">
                <label>Birthday</label>
              </div>
            </div>
          </div>
          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input type="hidden" name="contact[phonenumbers_attributes][][id]" value="<%= @contact.phonenumbers.first.id unless @contact.phonenumbers.empty? %>">
                <input class="form-control" type="text" name="contact[phonenumbers_attributes][][number]" value="<%= @contact.phonenumbers.first.number unless @contact.phonenumbers.empty? %>">
                <label>Phone</label>
              </div>
            </div>
            <div class="col-md-3">
              <div class="form-group">
                <select class="form-control" data-provide="selectpicker" name="contact[phonenumbers_attributes][][phone_type]">
                  <option>Type</option>
                  <option <%= 'selected' if !@contact.phonenumbers.empty? && @contact.phonenumbers.first.phone_type == 'mobile' %> value="mobile">Mobile</option>
                  <option <%= 'selected' if !@contact.phonenumbers.empty? && @contact.phonenumbers.first.phone_type == 'home' %> value="home">Home</option>
                  <option <%= 'selected' if !@contact.phonenumbers.empty? && @contact.phonenumbers.first.phone_type == 'work' %> value="work">Work</option>
                  <option <%= 'selected' if !@contact.phonenumbers.empty? && @contact.phonenumbers.first.phone_type == 'other' %> value="other">Other</option>
                </select>
              </div>
            </div>
            <div class="col-md-3 text-center">
              <button class="btn btn-sm btn-info btn-outline mt-10" type="button">Add Phone</button>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input class="form-control" type="text" name="contact[address1]" value="<%= @contact.address1 %>">
                <label>Street Address</label>
              </div>
            </div>

            <div class="col-md-6">
              <div class="form-group">
                <input class="form-control" type="text" name="contact[address2]" value="<%= @contact.address2 %>">
                <label>Line 2</label>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-md-6">
              <div class="form-group">
                <input class="form-control" type="text" name="contact[city]" value="<%= @contact.city %>">
                <label>City</label>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <input class="form-control" type="text" name="contact[state]" value="<%= @contact.state %>">
                <label>State / Province / Region</label>
              </div>
            </div>

            <div class="col-md-3">
              <div class="form-group">
                <input class="form-control" type="text" name="contact[postal_code]" value="<%= @contact.postal_code %>">
                <label>ZIP / Postal Code</label>
              </div>
            </div>
          </div>

          <label>Tags</label>
          <div class="form-group">
            <input type="text" value="<%= @contact.all_tags_list %>" id="typeahed-tags" name="contact[tag_list]">
            <small class="form-text">Press enter after typing tag</small>
          </div>

          <div class="form-group">
            <textarea class="form-control" rows="6" name="contact[highlights]"><%= @contact.highlights %></textarea>
            <label>Highlights</label>
          </div>
        </div>

        <footer class="card-footer text-right">
          <button class="btn btn-flat btn-primary" type="submit">Save Changes</button>
        </footer>
      <% end %>

      <div class="tab-pane fade" id="tab_conversations">
        <div class="card">
          <h5 class="card-title"><strong>Conversations</strong></h5>
        </div>

        <div class="main-content">
          <div class="card card-bordered flex-column">
            <div class="scrollable flex-grow" id="chat-content" data-provide="emoji" style="height: 500px;">
              <div id="conversations-panel">
                <%= render partial: 'conversations', locals: { messages: @contact.messages.order(created_at: :desc) } %>
              </div>
            </div>
            <footer class="publisher">
              <span class="avatar"><%= current_user.initials %></span>
              <input class="publisher-input" rows="1" placeholder="Write something">
              <div class="align-self-end gap-items">
                <a class="publisher-btn" href="#"><i class="fa fa-paper-plane"></i></a>
              </div>
            </footer>
          </div>
        </div>
      </div>

      <div class="tab-pane fade" id="tab_recipes_campaigns">
        <div class="card">
          <h5 class="card-title">Active <strong>Campaigns</strong></h5>
          <div class="media-list media-list-hover media-list-divided">
            <% @automated_campaigns.each do |campaign| %>
              <div class="media align-items-center">
                <div class="media-body">
                  <p><strong><%= campaign.name %></strong></p>
                </div>
                <div>
                  <% if @subscribed_campaigns.include?(campaign.id) %>
                    <a class="btn btn-sm btn-twitter" href="#">Added</a>
                  <% else %>
                    <a class="btn btn-sm btn-twitter btn-outline" href="#">Add to list</a>
                  <% end %>
                </div>
              </div>
            <% end %>
          </div>
        </div>

        <div class="card">
          <h5 class="card-title">Available <strong>Recipes</strong></h5>
          <div class="media-list media-list-hover media-list-divided">
            <% @available_recipes.each do |recipe| %>
              <div class="media align-items-center">
                <div class="media-body">
                  <p><strong><%= recipe.title %></strong></p>
                </div>
                <div>
                  <a class="btn btn-sm btn-twitter btn-outline" href="<%= admin_contact_add_task_recipe_path(contact_id: @contact.id, task_recipe_id: recipe.id) %>">Add tasks</a>
                </div>
              </div>
            <% end %>
          </div>
        </div>

      </div>

    </div>

  </div>
</div>

<!-- QUICKVIEW - View task -->
<div id="qv_view_task" class="quickview quickview-lg backdrop-dark"></div>

<!-- QUICKVIEW - Add task -->
<div id="qv-add-task" class="quickview quickview-lg backdrop-dark">
  <header class="quickview-header">
    <p class="quickview-title lead">New <strong>Task</strong></p>
    <span class="close"><i class="ti-close"></i></span>
  </header>

  <div class="quickview-body">
    <%= form_tag admin_create_contact_task_path(id: @contact.id, format: :js), method: :post, remote: true, authenticity_token: true, id: 'new-contact-task-form', class: 'form-type-combine' do %>
      <div class="card-body">
        <div class="form-group">
          <label for="select">Type</label>
          <select class="form-control" name="new_contact_task[task_type]">
            <option value="phone_call">Phone call</option>
            <option value="email">Email</option>
            <option value="message">Text</option>
            <option value="meeting">Meeting</option>
            <option value="general">General</option>
          </select>
        </div>
        <div class="form-group col-12">
          <label>Date / Time</label>
          <input class="form-control datetimepicker" type="text" name="new_contact_task[due_date]">
        </div>
        <br>
        <h6 class="text-light fw-300">Details</h6>
        <div class="form-groups-attached">
          <div class="form-group">
            <label>Task title</label>
            <input class="form-control" type="text" name="new_contact_task[title]">
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea class="form-control" rows="6" name="new_contact_task[details]"></textarea>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <footer class="quickview-footer flex-row-reverse">
    <div id="new-contact-task-spinner" class="spinner-circle-shadow invisible"></div>
    <button class="btn btn-success" id="new-contact-task-add" onclick="addNewContactTask()">Add</button>
    <button class="btn btn-danger" id="new-contact-task-cancel" type="reset">Cancel</button>
  </footer>
</div>

<!-- MODAL: Defer task -->
<div class="modal modal-center fade" id="modal-defer-task" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Defer: Task title</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_tag defer_task_admin_tasks_path(), method: :post, remote: true, authenticity_token: true, id: 'defer-task-form', class: 'quickview-block form-type-combine' do %>
        <div class="modal-body">
          <input type="hidden" name="task_id" value="" id="defer-task-id-field">
          <input type="hidden" name="refresh_panel" value="contact-detail">
          <div class="form-group">
            <label>Current due date</label>
            <input type="text" class="form-control" id="defer-current-due-date-field" value="" readonly="">
          </div>
          <div class="form-group">
            <label>Defer until</label>
            <input class="form-control datetimepicker" type="text" name="task[due_date]">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-bold btn-pure btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-bold btn-pure btn-primary" onclick="$('#defer-task-form').submit()">Save changes</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- MODAL: Send Confirmation -->
<div class="modal modal-center fade" id="modal-send-confirmation" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Confirmation Message</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_tag send_task_confirmation_admin_tasks_path(), method: :post, remote: true, authenticity_token: true, id: 'send-confirmation-form', class: 'quickview-block form-type-combine' do %>
        <div class="modal-body">
          <input type="hidden" name="task_id" value="" id="send-confirmation-task-id-field">
          <div class="form-group">
            <label>Number</label>
            <input type="text" class="form-control" name="phonenumber" value="<%= @contact.phonenumbers.mobile.first.number unless @contact.phonenumbers.mobile.empty? %>">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-bold btn-pure btn-secondary" data-dismiss="modal">Close</button>
          <button type="button" class="btn btn-bold btn-pure btn-primary" data-dismiss="modal" onclick="$('#send-confirmation-form').submit()">Send</button>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- MODAL: Update Status -->
<div class="modal modal-center fade" id="update_status_modal" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Update Status</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_tag admin_update_contact_status_path(id: @contact.id, format: :js), method: :post, remote: true, authenticity_token: true, id: 'update-sales-stage-form' do %>
        <input type="hidden" name="contact[sales_stage]" id="update-sales-stage-field" value="">
      <% end %>
      <div class="modal-body">
        <p>
          <button class="btn btn-block btn-bold btn-lead btn-lg" onclick="updateSalesStage('lead')">Lead</button>
        </p>
        <p>
          <button class="btn btn-block btn-bold btn-prospect btn-lg" onclick="updateSalesStage('prospect')">Prospect</button>
        </p>
        <p>
          <button class="btn btn-block btn-bold btn-customer btn-lg" onclick="updateSalesStage('customer')">Customer</button>
        </p>
        <p>
          <button class="btn btn-block btn-bold border-danger text-danger btn-lg" onclick="updateSalesStage('archived')">Archive Contact</button>
        </p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-bold btn-pure btn-secondary" data-dismiss="modal">Cancel</button>
      </div>
    </div>
  </div>
</div>

<!-- MODAL: Send text -->
<div class="modal modal-center fade" id="modal-send-text" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Send Text</h5>
        <button type="button" class="close" data-dismiss="modal">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <%= form_tag create_text_message_admin_messages_path(format: :js), method: :post, remote: true, authenticity_token: true, id: 'send-message-form', class: 'quickview-block form-type-combine' do %>
        <input type="hidden" class="form-control" name="contact_id" value="<%= @contact.id %>">
        <input type="hidden" class="form-control" name="refresh_panel" value="contact-view">
        <div class="modal-body">
          <div class="form-group">
            <label>Number</label>
            <input type="text" class="form-control" name="phonenumber" value="<%= @contact.phonenumbers.mobile.first.number unless @contact.phonenumbers.mobile.empty? %>">
          </div>
          <div class="form-group">
            <label>Message</label>
            <input type="text" class="form-control" name="message" value="">
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-bold btn-pure btn-secondary" data-dismiss="modal">Cancel</button>
          <button type="button" class="btn btn-bold btn-pure btn-primary" data-dismiss="modal" onclick="$('#send-message-form').submit()">Send</button>
        </div>
      <% end %>
    </div>
  </div>
</div>
